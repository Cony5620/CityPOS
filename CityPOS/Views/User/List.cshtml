@model IEnumerable<CityPOS.Models.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Display Error Message -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<table class="table ">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Roles</td>
                <td>
                    <a asp-controller="User" asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


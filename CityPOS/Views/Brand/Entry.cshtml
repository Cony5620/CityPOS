@model BrandViewModel
@{
    ViewData["Title"] = "Brand";
}
<h3>Brand</h3>
@{
    var info = ViewData["info"];
}
@if (info != null)
{
    if (Convert.ToBoolean(ViewData["status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}
<form action="/brand/entry" method="post">
    <div class="mb-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" placeholder="Type Brand Code" name="Code" value="@Model?.Code" readonly>

    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" placeholder="Type Brand Name" name="Name" required>

    </div>
    <div class="mb-3">
        <label class="form-label">Category</label>
    <select class="form-select" name="Categoryid">
        <option selected>Select the Category</option>
            @foreach(var Category in ViewBag.Categories)
            {
                <option value="@Category.id">@Category.Code</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Entry</button>
    <a href="/brand/list" class="btn btn-primary">Go to list</a>

</form> 
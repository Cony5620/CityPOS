@model SupplierViewModel
@{
    ViewData["Title"] = "Edit Supplier";
}

<h3>Supplier Edit</h3>

@{
    var info = TempData["info"];
}

@if (info != null)
{
    if (Convert.ToBoolean(TempData ["status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}

<form action="/Supplier/update" method="post">
    <input type="hidden" name="id" value="@Model.id" />
    <div class="mb-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" name="Code" value="@Model.Code" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" name="Email" value="@Model.Email" required>
    </div>
    <div class="mb-3">
        <label class="form-label">City</label>
        <select class="form-select" name="Cityid">
            <option selected>Select the City</option>
            @foreach (var citys in ViewBag.Citys)
            @if(citys.id==Model.Cityid)
            {
                    <option value="@citys.id" selected>@citys.Name</option>
            }
            else
                {
                    <option value="@citys.id">@citys.Name</option>
                }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Township</label>
        <select class="form-select" name="Townshipid">
            <option selected>Select the Township</option>
            @foreach (var township in ViewBag.Townships)
                @if (township.id == Model.Townshipid)
                {
                    <option value="@township.id" selected>@township.Name</option>
                }
                else
                {
                    <option value="@township.id">@township.Name</option>
                }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Adress</label>
        <textarea class="form-control" placeholder="type adress" name="Adress">@Model.Adress</textarea>

    </div>
    <div class="mb-3">
        <label class="form-label">Phone No</label>
        <input type="tel" class="form-control" name="PhoneNo" value="@Model.PhoneNo" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Company</label>
        <input type="text" class="form-control" name="Company" value="@Model.Company" required>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/Supplier/list" class="btn btn-secondary">Go to List</a>
</form>
